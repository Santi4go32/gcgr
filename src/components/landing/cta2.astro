import clausula from "assets/clausula.png";
import diversificacion from "assets/diversificacion.png";
import vinculacion from "assets/vinculacion.png";
import seguimiento from "assets/seguimiento.png";

const lang = getLangFromUrl(Astro.url);
const t = useTranslation(lang);


const numeros = [
  {
    numero: "cta2.subtitle1",
    image: clausula,
  },
  {
    numero: "cta2.subtitle3",
    image: diversificacion,

  },
  {
    numero: "cta2.subtitle2",
    image: vinculacion,
  },
  {
    numero: "cta2.subtitle4",
    image: seguimiento,
  },
];
