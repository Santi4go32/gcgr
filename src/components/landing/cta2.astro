<div class="w-screen relative left-1/2 right-1/2 -ml-[50vw] -mr-[50vw] bg-[#0E1B4D] h-auto flex items-center justify-center md:flex">
  <div class="relative flex w-full lg:max-w-screen-xl h-full">

    <div class="relative flex-grow py-8 md:py-20 rounded-lg flex flex-col items-center justify-center">
      
      <p class="text-center text-white text-4xl lg:text-5xl mb-16 font-medium fade-up">{t('cta.title2')}</p>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 items-start w-full">
        {numeros.map((item) => (
          <div class="flex flex-col items-center text-white">
            <div class="text-white w-full h-auto flex flex-col items-center justify-center text-center text-xl lg:text-2xl">
              <Picture
                src={item.image}
                alt={item.numero}
                loading="eager"
                class="h-[100px] w-auto fade-up"
              />
              <p class="whitespace-wrap h-full fade-up">
                {t(item.numero as 'cta.subtitle1')}
              </p>
