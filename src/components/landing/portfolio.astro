---
// @ts-ignore
import Link from "../ui/link.astro";
import { Picture } from "astro:assets";

import { getLangFromUrl,useTranslation } from "i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslation(lang);

const portfolios = [
  {
    title: "Security",
    price: "port.price1",
    description:
      "port.description1",
    benefits: [
      "port.rent1",
      "port.return",
      "port.risk1",
      "port.level",
    ],
    path: "#contact"
  },
  {
    title: "Silver",
    price: "port.price2",
    description:
      "port.description2",
    benefits: [
      "port.rent2",
      "port.return2",
      "port.risk2",
      "port.level2",
    ],
    path: "#contact"
  },
  {
    title: "Gold",
    price: "port.price3",
    description:
      "port.description3",
    benefits: [
      "port.rent3",
      "port.return3",
      "port.risk3",
      "port.level3",
    ],
    path: "#contact"
  }
];
---

<div id="portfolios-anchor" style="position: relative; top: -100px; visibility: hidden; margin-top: 10%"></div>
<div id="portfolios" class="mt-16 md:mt-0 flex justify-center items-center lg:items-start flex-col fade-up">
  <p class="text-center text-4xl lg:text-5xl lg:tracking-tight">
    {t('port.title')}
  </p>
  <br>
  <h2 class="text-center text-4xl lg:text-5xl font-bold lg:tracking-tight">
    {t('port.title2')}
  </h2>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 gap-16 mt-14 flex justify-center">
  {portfolios.map((item) => (
    <div class="flex flex-col gap-4 items-start p-10 mx-auto bg-[#0E1B4D] text-white w-full rounded-3xl">
      <div class="flex justify-between items-center w-full">
        <div>
          <p class="mb-1 font-bold fade-up">{t('port.personalized')}</p>
          <h3 class="font-bold lg:text-5xl text-5xl mb-6  break-words word-break break-all whitespace-normal fade-up">{item.title}</h3>
          <p>{t('port.minimum')}</p>
          <p class="font-bold text-4xl xl:text-4xl break-words word-break break-all whitespace-normal fade-up">{t(item.price as 'port.price1')}</p>
        </div>
      </div>
      
      <ul class="mt-3 list-disc">
        {item.benefits.map((benefit) => (
          <p class="fade-up">{t(benefit as 'port.rent1')}</p>
        ))}
      </ul>
      
      <div class="mt-4 w-full flex justify-center fade-up">
          <Link
            class="inline-flex gap-1 bg-white hover:text-white items-center font-semibold justify-center rounded-full lg:w-[250px] py-0.1 text-black border border-black"
            href={item.path}
          > {t('port.button')}
          </Link>
      </div>
    </div>
  ))}
</div>

