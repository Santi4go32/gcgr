---
const sales = [
  {
    title: "PREPÁRATE PARA RIQUEZA",
    description: "$77",
    image: "/COFRE.png",
  },
  {
    title: "LA LLAVE MAESTRA DE LA RIQUEZA",
    description: "$397",
    image: "/LLAVE.png",
  },
  {
    title: "LA SANACIÓN DE LA RIQUEZA",
    description: "$47",
    image: "/SANACION.png",
  },
  {
    title: "EL SECRETO DE LA RIQUEZA",
    description: "$297",
    image: "/SECRETO.png",
  },
  {
    title: "BONO ESPECIAL",
    description: "$67",
    image: "/BONO.png",
  },
];
---

<main class="relative w-full mb-5">
  <div class="relative">
    <div class="absolute inset-0 flex flex-col">
      <div class="min-h-[33vh] bg-[url('/m1.png')] bg-cover bg-center border-t-[10px] border-l-[10px] border-r-[10px] border-black rounded-t-[60px] flex-grow"></div>
      <div class="min-h-[33vh] bg-[url('/m2.png')] bg-cover bg-center border-l-[10px] border-r-[10px] border-black flex-grow"></div>
      <div class="min-h-[33vh] bg-[url('/m3.png')] bg-cover bg-center border-b-[10px] border-l-[10px] border-r-[10px] border-black rounded-b-[60px] flex-grow"></div>
    </div>
    <!-- Contenido superpuesto -->
    <div class="relative z-10 flex flex-col items-center justify-center text-white overflow-y-auto overflow-x-hidden p-10">
      <h1 class="text-5xl lg:text-[130px] text-center font-bold mb-4 tracking-tight leading-relaxed">LO QUE OBTENDRÁS</h1>
      {sales.map((sale) => ( 
        <div class="relative flex flex-col lg:flex-row items-center mt-5 gap-4 p-10 rounded-[60px] border-gradient w-full lg:w-1/2 xl:w-1/3">
          <img
            src={sale.image}
            alt={sale.title}
            class="w-[200px] h-[200px] rounded-full"
          />
          <div class="flex text-3xl lg:text-4xl text-center font-bold flex-col">
            <h2 class="whitespace-pre-line">{sale.title}</h2>
            <p class="text-center text-6xl lg:text-8xl text-[#ffca00]">{sale.description}</p>
          </div>
        </div>
      ))}
      <h1 class="text-4xl lg:text-[80px] mt-[40px] text-center font-bold">
        VALOR TOTAL DE LA GUÍA CUÁNTICA
      </h1>
      <h1 class="text-6xl lg:text-[100px] mt-5 font-bold text-[#ffca00]">$885</h1>
      <div class="text-4xl lg:text-[70px] font-bold border-gradient text-center mt-5">
        <h1 class="m-10 leading-none">OFERTA ESPECIAL:
            <br>
            (PAGO ÚNICO)
            <br>
            <span class="text-[#ffca00] text-[100px]">$107</span>
        </h1>
      </div>
      <button class="mt-[80px]">
        <a href="#comprar" class="p-4 text-2xl lg:text-[40px] font-bold bg-gradient-to-b from-[#ffbb00] to-[#513a01] rounded-[25px] text-center mt-5">OBTENER AHORA</a>
      </button>
    </div>
  </div>
</main>

<style>
  .border-gradient {
    position: relative;
    border-radius: 60px;
  }

  .border-gradient::before {
    content: "";
    position: absolute;
    inset: 0;
    z-index: -1;
    border-radius: inherit;
    padding: 8px;
    background: linear-gradient(45deg, #513a01, #ffbb00);
    -webkit-mask:
      linear-gradient(white, white) content-box,
      linear-gradient(white, white);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
  }

  @media (max-width: 720px) {

    .border-gradient::before {
      padding: 4px;
    }
  }
</style>