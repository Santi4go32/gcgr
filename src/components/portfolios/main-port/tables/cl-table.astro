---
import { getLangFromUrl, useTranslation } from "i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslation(lang);
---

<table class="pad min-w-full border-collapse border border-gray-300 text-[12px] text-center">
  <thead>
    <tr>
      <th class="border border-gray-300 py-2">{t("month")}</th>
      <th class="border border-gray-300 py-2">2023</th>
      <th class="border border-gray-300 py-2">2024</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="border border-gray-300 px-0 py-0">{t("january")}</td>
      <td class="border border-gray-300 px-0 py-0">1.14%</td>
      <td class="border border-gray-300 px-0 py-0">0.61%</td>
    </tr>
    <tr>
      <td class="border border-gray-300 px-0 py-0">{t("february")}</td>
      <td class="border border-gray-300 px-0 py-0">-0.27%</td>
      <td class="border border-gray-300 px-0 py-0">1.01%</td>
    </tr>
    <tr>
      <td class="border border-gray-300 px-0 py-0">{t("march")}</td>
      <td class="border border-gray-300 px-2 py-0">0.17%</td>
      <td class="border border-gray-300 px-2 py-0">0.03%</td>
    </tr>
    <tr>
      <td class="border border-gray-300 px-0 py-0">{t("april")}</td>
      <td class="border border-gray-300 px-2 py-0">1.08%</td>
      <td class="border border-gray-300 px-2 py-0">1.36%</td>
    </tr>
    <tr>
      <td class="border border-gray-300 px-0 py-0">{t("may")}</td>
      <td class="border border-gray-300 px-2 py-0">1.23%</td>
      <td class="border border-gray-300 px-2 py-0">0.63%</td>
    </tr>
    <tr>
      <td class="border border-gray-300 px-0 py-0">{t("june")}</td>
      <td class="border border-gray-300 px-2 py-0">1.23%</td>
      <td class="border border-gray-300 px-2 py-0">1.25%</td>
    </tr>
    <tr>
      <td class="border border-gray-300 px-0 py-0">{t("july")}</td>
      <td class="border border-gray-300 px-2 py-0">0.91%</td>
      <td class="border border-gray-300 px-2 py-0">0.27%</td>
    </tr>
    <tr>
      <td class="border border-gray-300 px-0 py-0">{t("august")}</td>
      <td class="border border-gray-300 px-2 py-0">1.07%</td>
      <td class="border border-gray-300 px-2 py-0">1.12%</td>
    </tr>
    <tr>
      <td class="border border-gray-300 px-0 py-0">{t("september")}</td>
      <td class="border border-gray-300 px-2 py-0">-0.35%</td>
      <td class="border border-gray-300 px-2 py-0">0.68%</td>
    </tr>
    <tr>
      <td class="border border-gray-300 px-0 py-0">{t("october")}</td>
      <td class="border border-gray-300 px-2 py-0">1.10%</td>
      <td class="border border-gray-300 px-2 py-0">2.37%</td>
    </tr>
    <tr>
      <td class="border border-gray-300 px-0 py-0">{t("november")}</td>
      <td class="border border-gray-300 px-2 py-0">1.49%</td>
      <td class="border border-gray-300 px-0 py-0"></td>
    </tr>
    <tr>
      <td class="border border-gray-300 px-0 py-0">{t("december")}</td>
      <td class="border border-gray-300 px-2 py-0">1.23%</td>
      <td class="border border-gray-300 px-0 py-0"></td>
    </tr>
    <tr>
      <td class="border border-gray-300 px-0 py-0">Total</td>
      <td class="border border-gray-300 px-2 py-0">10.03%</td>
      <td class="border border-gray-300 px-2 py-0">9.33%</td>
    </tr>
  </tbody>
</table>


<style>
    @media (max-width: 1024px) and (max-height: 700px) {
      .pad {
        font-size: 10px;
      }
  
      .ti {
        font-size: 15px;
      }
    }

    @media (min-width: 2100px) {
      .pad {
        font-size: 20px;
      }
  
      .ti {
        font-size: 30px;
      }
    }

    @media (min-width: 2000px) and (min-height: 1040px) {
      .pad {
        font-size: 18px;
      }
  
      .ti {
        font-size: 28px;
      }
    }
  </style>
